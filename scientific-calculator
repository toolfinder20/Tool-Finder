<script>
const display = document.getElementById('display');

function append(val){ display.textContent += val; }
function clearAll(){ display.textContent=''; }
function del(){ display.textContent = display.textContent.slice(0,-1); }

function applyFunction(fn){
  let expr = display.textContent;
  try{
    // convert ^ into ** for JS exponent
    expr = expr.replace(/\^/g,"**");
    // wrap trig/log calls
    expr = expr.replace(/sin\(/g,"Math.sin(")
                 .replace(/cos\(/g,"Math.cos(")
                 .replace(/tan\(/g,"Math.tan(")
                 .replace(/log\(/g,"Math.log10(");
    let result = eval(expr);
    if(fn === 'sqrt') result = Math.sqrt(result);
    display.textContent = result;
  } catch(e){ display.textContent='Error'; }
}

function insertFunction(fn){
  if(fn==='sqrt') append('sqrt(');
  else if(fn==='sin' || fn==='cos' || fn==='tan' || fn==='log') append(fn+'(');
  else if(fn==='^') append('^');
}

// button events
document.querySelectorAll('button').forEach(btn=>{
  btn.addEventListener('click',()=>{
    const val = btn.dataset.val;
    const fn = btn.dataset.fn;

    if(val) append(val);
    else if(fn){
      if(fn==='AC') clearAll();
      else if(fn==='DEL') del();
      else if(fn==='=') applyFunction();
      else if(fn==='sqrt') applyFunction('sqrt');
      else insertFunction(fn);
    }
  });
});
</script>
